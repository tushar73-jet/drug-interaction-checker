{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}