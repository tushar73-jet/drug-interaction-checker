generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model DrugInteraction {
  id          Int    @id @default(autoincrement())
  drug1       String
  drug2       String
  description String
  severity    String // E.g., Major, Moderate, Minor

  @@index([drug1])
  @@index([drug2])
}
